<h1 class="text-center"><%= @title %></h1>
<% @media_data.reverse_each do |data| %>
  <% if data['mobile_video_url']  %>
    <h3 class="text-center"><%= data['title'].gsub('MetroPCS', '') %></h3>
    <p class="text-center"><%= data['description'] %></p>
    <div class="row">
      <div class="col-md-2">

      </div>
      <div class="col-md-10">
        <video class="video" src="<%= data['mobile_video_url'] %>" controls poster="<%= data['thumbnail'] %>"></video>
      </div>
    </div>
  <% end %>
<% end %>
