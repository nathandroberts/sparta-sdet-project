<h1 class="text-center"><%= @title %></h1>
<% @news_data.each do |data| %>
  <h3 class="text-center"><%= data['title'] %></h3>
  <h4 class="text-center"><%= data['author'] %></h4>
  <p class="text-center"><%= data['first_name'] %> <%= data['last_name'] %></p>
  <% if data['external_url'] == '' %>
    <a class="text-center"href="http://ufc-data-api.ufc.com/api/v3/iphone/news/<%= data['id'] %>"><img src="<%= data['thumbnail'] %>" alt="<%= data['url_name'] %> image"></a>
  <% else %>
    <a class="text-center"href="<%= data['external_url'] %>"><img src="<%= data['thumbnail'] %>" alt="<%= data['url_name'] %> image"></a>
  <% end %>

<% end %>
