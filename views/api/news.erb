<h1><%= @title %></h1>
<% @news_data.each do |data| %>
  <h3><%= data['title'] %></h3>
  <h4><%= data['author'] %></h4>
  <p><%= data['first_name'] %> <%= data['last_name'] %></p>
  <% if data['external_url'] == '' %>
    <a href="http://ufc-data-api.ufc.com/api/v3/iphone/news/<%= data['id'] %>"><img src="<%= data['thumbnail'] %>" alt="<%= data['url_name'] %> image"></a>
  <% else %>
    <a href="<%= data['external_url'] %>"><img src="<%= data['thumbnail'] %>" alt="<%= data['url_name'] %> image"></a>
  <% end %>

<% end %>
